<div>
<h3 style="padding:20px 0">Billing</h3>
    <div class = "row">
    <div class = "span8">
    
        <form id="cart-form" class="form-horizontal">
            <div class="control-group">
              <label for="id" class="control-label">Product ID</label>
              <div class="controls">
                <%- contentTag('input', '', {type:'text', class:'span4', name:'id'}) %>
              </div>
            </div>
            <div class="control-group">
              <label for="quantity" class="control-label">Quantity</label>
              <div class="controls">
                <%- contentTag('input', '', {type:'number', class:'span4', name:'quantity'}) %>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <%- contentTag('button', 'Add to Cart', {type: 'submit', formaction: '/addCart', formmethod: 'GET', class: 'btn btn-primary'}) %>
              </div>
            </div>
        </form>
                
    </div>
    <div class = "span4">
    <% if (products) { %>
<% for (var i = 0, ii = products.length; i < ii; i++) { %>
  <div class="row list-item" id="product-<%= products[i].id; %>">
    <div class="span4">
        
        <h3><%= products[i].productId %></h3>
        <div class="barCode"></div>
        <script>
        var pr = '<%= products[i].productId%>';
          $('#product-<%= products[i].id%> .barCode').barcode(pr,"code39",{barWidth:2, barHeight:50});
        </script>
        <div>
            <span>Remaining Quantity : </span>
            <span><%= products[i].quantity; %></span>
      </div>
             
      </div>
    </div>
    <% } } %>
    </div>
    </div>
</div>